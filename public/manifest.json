{
  "name": "StackInbox",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Stack Overflow Inbox and Notifications.",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
   "128": "logo128.png",
    "512": "logo512.png"
  },
  "browser_action": {
    "default_icon": "logo512.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "alarms",
    "https://stackoverflow.com/*"
  ]
}